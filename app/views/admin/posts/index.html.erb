<div class="admin-container">
  <h3> <%= t('article_listing') %></h3>
</div>

<div class="row">
  <span> <%= t('new') %> </span>&nbsp<a href="<%= new_admin_post_url %>"class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></a>
</div>

<table class="responsive-table centered highlight">
  <thead>
    <tr>
      <th data-field="id"><%= t('title') %></th>
      <th data-field="name"><%= t('published') %></th>
      <th data-field="price"><%= t('created_at') %></th>
      <th data-field="city"> <%= t('actions') %> </th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <% @posts.each do |post| %>
        <td> <%= post.title %> </td>
        <td> 
          <% if post.published %>
            <input type="checkbox" class="filled-in" id="filled-in-box" checked="checked" />
            <label for="filled-in-box"></label>
          <% else %>
            <input type="checkbox" id="test5" />
            <label for="test5"></label>
          <% end %>
        </td>
        <td> <%= post.created_at.strftime("%Y/%m/%d") %> </td>
        <td> 
          <%= link_to t('edit'), edit_admin_post_url(post), class: "btn blue darken-3" %>
          <%= link_to t('delete'), root_path, class: "btn red darken-4" %> 
        </td>
      <% end %>
    </tr>
  </tbody>
</table>
