<div class="row">
  <div class="container">
    <%= devise_error_messages! %>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="center">
      <h3> RegÃ­strate </h3> 
      <%= link_to "RegÃ­strate con Facebook", user_facebook_omniauth_authorize_url, class: "btn blue darken-4 facebook" %>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "col s12" }) do |f| %>
      <div class="row">
        <div class="input-field col s12">
          <%= f.text_field :full_name, id: "full_name", class: "validate", required: "" %>
          <%= f.label :full_name, for: "full_name" %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.text_field :email, id: "email", class: "validate" %>
          <%= f.label :email, for: "email", class: "active" %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <%= f.password_field :password, id: "password", class: "validate" %>
          <%= f.label :password, for: "password", class: "active" %>
        </div>

        <div class="input-field col s6">
          <%= f.password_field :password_confirmation, id: "password_confirmation", class: "validate" %>
          <%= f.label :password_confirmation, for: "password_confirmation" %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <%= f.text_field :telephone, id: "telephone", class: "validate" %>
          <%= f.label :telephone, for: "telephone" %>
        </div>
        <div class="input-field col s6">
          <%= f.text_field :cellphone, id: "cellphone" %>
          <%= f.label :cellphone, for: "cellphone" %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= f.text_field :address, id: "address" %>
          <%= f.label :address, for: "address" %>
        </div>
      </div>
      <div class="container center">
        <%= f.submit "Registrarse", class: "btn waves-effect waves-light light-blue darken-3" %>
      </div>
    <% end %>
  </div>
</div>
